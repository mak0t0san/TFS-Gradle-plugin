<?xml version="1.0" encoding="utf-8" ?>
<!-- Provide the details of all the VMs to which the code should be deployed. The format will be as follows:
     <AzureVMs>
		<VM>
			<ImageType>...</ImageType> 				
				Mandatory.
				Values allowed are - Windows or Linux.
				Linux would cover different versions of Linux OS - Ubuntu, CentOS, etc.
				
			<DNS>...</DNS>
				Mandatory
			
			<UserName>...</UserName>
				Mandatory
			
			<DeploymentPath>...</DeploymentPath>		
				Mandatory.
				Path on the VM, where the Build Output should be deployed.
			
			<StandaloneSSHPublicPort>...</StandaloneSSHPublicPort> 	
				Mandatory for Linux Image Only
			
			<WinRMPort>...</WinRMPort> 	
				Mandatory for Windows Image Only
				
			<Password>...</Password>					
				For Windows Image - Mandatory
				For Linux Image - Either Password or SSHPrivateKeyPath is to be provided.
				
			<SSHPrivateKeyPath>...</SSHPrivateKeyPath>	
				For Linux Image - Either Password or SSHPrivateKeyPath is to be provided. 
								  SSH Key Path - Full Path on the Build Agent / Path accessible to the Build Agent.
		</VM>
	 </AzureVMs>
-->
<AzureVMs>
	<VM>
		<ImageType>Linux</ImageType> 				
		<DNS>vm1.cloudapp.net</DNS>
		<UserName>azureuser</UserName>
		<DeploymentPath>/home/azureuser</DeploymentPath>		
		<StandaloneSSHPublicPort>22</StandaloneSSHPublicPort> 	
		<Password>azureuser</Password>					
	</VM>
	<VM>
		<ImageType>Linux</ImageType> 				
		<DNS>vm2.cloudapp.net</DNS>
		<UserName>azureuser</UserName>
		<DeploymentPath>/home/azureuser</DeploymentPath>		
		<StandaloneSSHPublicPort>20000</StandaloneSSHPublicPort> 	
		<Password>azureuser</Password>					
	</VM>
	<VM>
		<ImageType>Linux</ImageType> 				
		<DNS>vm3.cloudapp.net</DNS>
		<UserName>azureuser</UserName>
		<DeploymentPath>/home/azureuser</DeploymentPath>		
		<StandaloneSSHPublicPort>300</StandaloneSSHPublicPort> 	
		<SSHPrivateKeyPath>C:\puttyPrivateKey.ppk</SSHPrivateKeyPath>					
	</VM>
	<VM>
		<ImageType>Windows</ImageType> 				
		<DNS>vm4.cloudapp.net</DNS>
		<UserName>azureuser</UserName>
		<Password>azureuser</Password>	
		<DeploymentPath>C:\</DeploymentPath>		
		<WinRMPort>5985</WinRMPort> 	
	</VM>
</AzureVMs>
